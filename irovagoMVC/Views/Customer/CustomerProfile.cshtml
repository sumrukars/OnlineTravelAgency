
@model irovagoMVC.Models.CustomerMVCModel
@{
    ViewBag.Title = "CustomerProfile";
}
<!------ Include the above in your HEAD tag ---------->


@using (Html.BeginForm("CustomerProfile", "Customer", FormMethod.Post, new { @class = "container bootstrap snippet" }))
{
    <div class="row">
        <h1>Update Your Profile Informations</h1>
        <hr>
        <div class="col-sm-3">
            <!--left col-->

            <ul class="list-group" style="margin-top:45px;">
                <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Favorited Offers</strong></span>@Model.favoritedOfferCount</li>
            </ul>



        </div><!--/col-3-->
        <div class="col-sm-9" id="form">


            <div class="tab-content">
                <div class="tab-pane active" id="home">

                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="name">Name</label>
                                @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder = "Enter name" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name">Surname</label>
                                @Html.TextBoxFor(model => model.surname, new { @class = "form-control", placeholder = "Enter surname" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="phone">Phone</label>
                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control", placeholder = "Enter phone" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email"><h4>Email</h4></label>
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="address">Address</label>
                                @Html.TextBoxFor(model => model.address, new { @class = "form-control", placeholder = "Enter address" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button  type="submit" id="button">Submit</button>
                            </div>
                        </div>
                    </form>

                    <hr>

                </div><!--/tab-pane-->
            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div>
}

@section scripts {
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
           if (successMessage != '') {
                 if (successMessage == 'Your information updated successfully') {
                alertify.success(successMessage);
            } else {
                alertify.error(successMessage);
            }
            }
        });
    </script>
    }



