@model irovagoMVC.Models.LoginMVCModel
@{
    ViewBag.Title = "AddAgency";
}

<div class="panel-group">
    <div class="panel-default">
        <h1>Create New Agency Account</h1>
        <hr />
        <div class="panel-body">
            @using (Html.BeginForm("AddAgency", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="control-label col-sm-2">Brand Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Agency.brand, new { @class = "form-control", placeholder = "Enter Name" })
                        @Html.ValidationMessageFor(model => model.Agency.brand)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Address</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Agency.address, new { @class = "form-control", placeholder = "Enter Surname" })
                        @Html.ValidationMessageFor(model => model.Agency.address)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Email</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Agency.email, new { @class = "form-control", placeholder = "Enter Email" })
                        @Html.ValidationMessageFor(model => model.Agency.email)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Password</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Enter Password" })
                        @Html.ValidationMessageFor(model => model.password)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Phone</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Agency.phone, new { @class = "form-control", placeholder = "Enter Phone" })
                        @Html.ValidationMessageFor(model => model.Agency.phone)
                    </div>
                </div>
                <div class="form-group">

                    <input type="submit" value="Register" class="btn button col-sm-20" style="margin-left:60px;" />

                </div>

            }
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
